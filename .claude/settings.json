{
  "$schema": "https://code.claude.com/schemas/settings.json",
  "_comment": "Project-level Claude Code settings. Shared via git. See: https://code.claude.com/docs/en/settings",

  "permissions": {
    "allow": [
      "Read(./)",
      "Edit(./src/**)",
      "Edit(./Tasks/**)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(curl | sh:*)",
      "Bash(wget | sh:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)"
    ]
  },

  "env": {
    "_comment": "Environment variables available to Claude Code sessions"
  }
}
